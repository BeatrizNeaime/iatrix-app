{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": [
    "**/**/*.ts",
    "**/**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts",
    "app/(auth)/sign-up.jsx",
    "app/(auth)/sign-in.jsx",
    "app/(auth)/_layout.tsx",
    "app/(tabs)/profile.jsx",
    "app/(tabs)/home.jsx"
  ]
}
